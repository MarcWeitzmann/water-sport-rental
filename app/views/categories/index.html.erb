<div class="container mt-3 style="padding: 90px" >
  <div class="row justify-content-center">

    <div class="col-12" %>     
      <h1>Here are the Categories</h1>
      <div class="row">
        <% @categories.each do |category| %>
          <div class="col mt-3">
            <div class="card">
              <%= image_tag category.image_name, alt: category.name, class: "d-block w-50" %>
              <div class="card-body">
                <h5 class="card-title"><%= category.name %></h5>
                <p class="card-text"><%= category.description %></p>
                <%= link_to "Check the offers", school_category_items_path(@school, category), class: "btn btn-primary" %>
              </div>
            </div>
          </div>
        <% end %>   
      </div>
    </div>   
  </div>
</div>
