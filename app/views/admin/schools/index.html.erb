<div class="container mt-3" >
  <div class="row justify-content-center">
    <div class="col-12" %>
      <h1><%= @schools.name %></h1>
        <%= link_to 'Create School', new_admin_school_path, class: "btn btn-primary" %>
    </div>
  </div>

  <div class="row">

    <% @schools.each do |school| %>
      <div class="col mt-3">
        <div class="card" style="width: 24rem">
          <% if school.photo.attached? %>
            <%= cl_image_tag(school.photo.key, width: 200, height: 200, crop: :fill) %>
          <% else %>
            <%= image_tag "surfboard.png", width: 200, height: 200 %>
          <% end %>

          <div class="card-body">
            <h5 class="card-title"><%= school.name %></h5>
            <h5 class="card-title"><%= school.street %></h5>
            <h5 class="card-title"><%= school.city %></h5>
            <h5 class="card-title"><%= school.email %></h5>
            <h5 class="card-title"><%= school.phone %></h5>
            <%= link_to 'Delete', admin_schools_path(school), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %>
            <%= link_to 'Edit', edit_admin_school_path(school), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>



