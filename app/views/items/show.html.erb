<div class="container mt-3" >
  <div class="row justify-content-center">
    <div class="col-12">

      <h1>Reviews</h1>

      <h2><%= pluralize @item.reviews.size, "review" %></h2>
        <div id="reviews">
          <% if @item.reviews.blank? %>
            Be the first to leave a review for <%= @item.name %>
          <% else %>
            <% @item.reviews.each do |review| %>
              <p id="review-<%= review.id %>">
                <%= review.content %>
              </p>
            <% end %>
          <% end %>
        </div>


      <%= simple_form_for([@item, @review], remote: true) do |f| %>
        <%= f.input :content, as: :text %>
        <%= f.button :submit, class: "btn btn-primary" %>
      <% end %>
    </end>
  </end>
</end>
